{erl_opts, [debug_info]}.

{deps,
 [ {gpb, "~> 4.11"}
 , {gproc, "0.8.0"}
 , {cowboy, "2.8.0"}
 , {gun, "1.3.3"}
 ]}.

{profiles,
 [{test,
   [{grpc,
     [{type, all},
      {protos, ["test/"]},
      {gpb_opts, [{module_name_prefix, "ct_"},
                  {module_name_suffix, "_pb"}]}
     ]},
    {plugins,
     [ {grpc_plugin, {git, "https://github.com/HJianBo/grpcbox_plugin", {branch, "develop"}}}
     ]},
    {provider_hooks,
     [{pre, [{compile, {grpc, gen}}]}]}
   ]}]}.
